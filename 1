
# Problem 1 - Find sum of all multiples of 3 or 5 below 1000
sum = 0

for x in range(1, 1000):
    if x % 3 == 0 or  x % 5 == 0:
        sum = sum + x

print("The answer to question 1 is",sum)

# Problem 2 - Summing even fibonacci numbers under 4 million

num1 = 1
num2 = 2
x = 1
sum = 0

while x < 4 * 10 ** 6:
    if x % 2 == 0:
        sum = sum + x

    x = num1 + num2
    print(x)
    num1 = num2
    num2 = x

    print("The sum is ", sum + 2)
